generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Games {
  id String @id @default(uuid())

  name        String     @unique
  description String
  developer   String
  comments    Comments[]

  @@map("games")
}

model Comments {
  id String @id @default(uuid())

  text       String
  game_score Int

  @@map("comments")
  Games   Games?  @relation(fields: [gamesId], references: [id])
  gamesId String?
}
